<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.lifeistech.android.twittertest.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/mainColor"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_twitter" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_tweet"
        android:src="@drawable/twitter_mancolor"
        android:onClick="onClickTweet"
        android:filterTouchesWhenObscured="false"
        android:scaleType="fitCenter"
        android:layout_marginTop="515dp"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_refresh"
        android:src="@drawable/refresh_mancolor"
        android:onClick="onClickRefresh"
        android:filterTouchesWhenObscured="false"
        android:scaleType="fitCenter"
        android:layout_marginTop="515dp"
        android:layout_marginLeft="50dp"/>

</android.support.design.widget.CoordinatorLayout>
